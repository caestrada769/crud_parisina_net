@model CrudParisina.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}
<div class="container text-center mt-5" style="border: 2px solid #a48004; padding: 20px; border-radius: 10px; max-width: 50%; padding: 20px; background-color: white;">
<h1>Eliminar</h1>

<div>
        <hr style="color: #a48004" />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdRol)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdRol)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoUsuario)
        </dt>
        <dd class = "col-sm-10">
                @(Model.EstadoUsuario == true ? "Activo" : "Inactivo")
        </dd>
    </dl>
    
    <form asp-action="Delete">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Regresar</a>
        <input type="hidden" asp-for="IdUsuario" />
            <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />

        </form>
</div>
</div>