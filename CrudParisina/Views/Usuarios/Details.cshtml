@model CrudParisina.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<div class="container text-center mt-5" style="border: 2px solid #a48004; padding: 20px; border-radius: 10px; max-width: 40%; padding: 20px; background-color: white;">
<h1>Detalles</h1>

<div>
    <h4>Usuario</h4>
        <hr style="color: #a48004" />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdRol)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdRol)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
                <span style="font-weight: bold;">Estado: </span> 
        </dt>
        <dd class = "col-sm-10">
                @(Model.EstadoUsuario == true ? "Activo" : "Inactivo")
        </dd>
    </dl>
</div>
<div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm mb-3">Regresar</a>
        <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn btn-personalizado btn-sm mb-3">Editar</a>
    </div>
</div>