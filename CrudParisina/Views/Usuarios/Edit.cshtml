@model CrudParisina.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}
<div class="container text-center mt-5" style="border: 2px solid #a48004; padding: 20px; border-radius: 10px; max-width: 60%; padding: 20px; background-color: white;">
<h1>Editar</h1>

<h4>Usuario</h4>
    <hr style="color: #a48004" />
    <div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUsuario" />
            <div class="form-group">
                <label asp-for="IdRol" class="control-label"></label>
                <input asp-for="IdRol" class="form-control" />
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
                <div class="form-group mb-3">
                    <label asp-for="EstadoUsuario" class="control-label">Estado</label>
                    <select asp-for="EstadoUsuario" class="form-control">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
            </div>
            <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm mb-3">Regresar</a>
                    <input type="submit" value="Guardar" class="btn btn-personalizado btn-sm mb-3" />
            </div>
        </form>
    </div>
</div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
