@model CrudParisina.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<div class="container text-center mt-5" style="border: 2px solid #a48004; padding: 20px; border-radius: 10px; max-width: 40%; padding: 20px; background-color: white;">
    <h1>Detalles</h1>

    <div>
        <h4>Categoria</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCategoria)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DescripcionCategoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescripcionCategoria)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @(Model.EstadoCategoria == true ? "Activo" : "Inactivo")
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm mb-3">Regresar</a>
        <a asp-action="Edit" asp-route-id="@Model?.IdCategoria" class="btn btn-personalizado btn-sm mb-3">Editar</a>
    </div>
</div>


