@model CrudParisina.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center mt-5" style="border: 2px solid #a48004; padding: 20px; border-radius: 10px; max-width: 50%; padding: 20px; background-color: white;">
    <h1>Eliminar</h1>
    <h4>Categoria</h4>

    <h3>Eliminar @Html.DisplayFor(model => model.NombreCategoria)?</h3>
    <div>
        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NombreCategoria)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DescripcionCategoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DescripcionCategoria)
            </dd>
            <dt class="col-sm-2">
                Estado
            </dt>
            <dd class="col-sm-10">
                @(Model.EstadoCategoria == true ? "Activo" : "Inactivo")
            </dd>
        </dl>

        <form asp-action="Delete">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Regresar</a>
            <input type="hidden" asp-for="IdCategoria" />
            <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />
        </form>
    </div>
</div>


