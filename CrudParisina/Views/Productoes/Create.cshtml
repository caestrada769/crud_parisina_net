@model CrudParisina.Models.Producto

@{
    ViewData["Title"] = "Create";
}

<div class="container text-center mt-5" style="border: 2px solid #a48004; padding: 20px; border-radius: 10px; max-width: 60%; padding: 20px; background-color: white;">
    <h1>Crear</h1>
    <h4>Producto</h4>
    <hr style="color: #a48004" />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdCategoria" class="control-label">Categoría</label>
                    <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria"></select>
                </div>
                <div class="form-group">
                    <label asp-for="NombreProducto" class="control-label">Nombre</label>
                    <input asp-for="NombreProducto" class="form-control" />
                    <span asp-validation-for="NombreProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescripcionProducto" class="control-label">Descripción</label>
                    <input asp-for="DescripcionProducto" class="form-control" />
                    <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioProducto" class="control-label">Precio</label>
                    <input asp-for="PrecioProducto" class="form-control" type="number" />
                    <span asp-validation-for="PrecioProducto" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ImagenProducto" class="control-label">Imagen</label>
                    <input asp-for="ImagenProducto" type="file" class="form-control" name="imagen" id="ImagenProducto" />
                    <span asp-validation-for="ImagenProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm mb-3">Regresar</a>
                    <input type="submit" value="Crear" class="btn btn-personalizado btn-sm mb-3" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
