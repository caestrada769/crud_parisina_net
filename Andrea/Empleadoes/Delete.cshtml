@model CrudParisina.Models.Empleado
@{
    ViewData["Title"] = "Delete";
}

<div class="container text-center mt-5" style="border: 2px solid #a48004; padding: 20px; border-radius: 10px; max-width: 50%; padding: 20px; background-color: white;">
    
    

    <h3>¿Desea eliminar a @Html.DisplayFor(model => model.NombreEmpleado)?</h3>
    <div>
        <hr style="color: #a48004" />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdArea)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdArea)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEmpleado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEmpleado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroDocumento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroDocumento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoEmpleado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoEmpleado)
        </dd>
        
        
    </dl>
    
    <form asp-action="Delete">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Regresar</a>
            <input type="hidden" asp-for="IdEmpleado" />
            <input type="submit" value="Eliminar" class="btn btn-danger btn-sm" />
    </form>
</div>
