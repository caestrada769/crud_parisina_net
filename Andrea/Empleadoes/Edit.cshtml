@model CrudParisina.Models.Empleado

@{
    ViewData["Title"] = "Edit";
}

<div class="container text-center mt-5" style="border: 2px solid #a48004; padding: 20px; border-radius: 10px; max-width: 60%; padding: 20px; background-color: white;">
    <h1>Editar</h1>
    <h4>Empleado</h4>
    <hr style="color: #a48004" />
    <div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEmpleado" />
            
            <div class="form-group">
                <label asp-for="IdArea" class="control-label"></label>
                <input asp-for="IdArea" class="form-control" />
                <span asp-validation-for="IdArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreEmpleado" class="control-label"></label>
                <input asp-for="NombreEmpleado" class="form-control" />
                <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroDocumento" class="control-label"></label>
                <input asp-for="NumeroDocumento" class="form-control" />
                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
            </div>
            
                <div class="form-group mb-3">
                    <label asp-for="EstadoEmpleado" class="control-label">Estado</label>
                    <select asp-for="EstadoEmpleado" class="form-control">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm mb-3">Regresar</a>
                    <input type="submit" value="Guardar" class="btn btn-personalizado btn-sm mb-3" />
                </div>
            </form>

        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}